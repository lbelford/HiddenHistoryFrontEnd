<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#7BAFD4"
    tools:context="com.example.kendall.hiddenhistory.Narrative"
    android:orientation="vertical">


    <TextView android:id="@+id/machine_terminal"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:maxLines="20"
        android:layout_weight="1"
        android:background="#323232"
        android:isScrollContainer="true"
        android:textColor="#FF30D210"
        android:fontFamily="monospace"
        android:textSize="25dp"
        android:text="@string/large_text"/>

    <LinearLayout
        android:layout_below="@id/machine_terminal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView android:id="@+id/agent_texts"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="25"
            android:layout_weight="5"
            android:background="#ffffff"
            android:isScrollContainer="true"
            android:textSize="25dp"
            android:text="@string/large_text"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button android:id="@+id/next_location_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textAllCaps="false"
                android:text="Next Location"
                android:textSize="20dp"/>
            <Button android:id="@+id/abort_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textAllCaps="false"
                android:text="End Adventure"
                android:textSize="20dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
